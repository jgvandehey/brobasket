<%= simple_form_for(@basket, html: { class: "form-horizontal"}) do |f| %>
<%= f.error_notification %>
<%= f.input :name %>
<%= f.input :description, as: :text, input_html: { rows: "3" } %>
<%= f.input :ingredients %>
<%= f.number_field :price, :class => 'text_field', :step => 'any' %>
<%= f.input :image_1, label: "Upload an image" %>
<%= f.input :image_2, label: "Upload an image" %>
<%= f.input :image_3, label: "Upload an image" %>


<div class="form-actions">
	<%= f.button :submit, class: "btn btn-primary" %>
</div>
<% end %>